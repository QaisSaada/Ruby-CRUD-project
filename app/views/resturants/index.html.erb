
<h1>Resturants list</h1>

<table class="table table-striped table-bordered table-hover">
    <thead class="thead-dark">
      <tr>
        <th>Name</th>
        <th>Location</th>
        <th>Phone</th>
        <th>Food_type</th>
        <th>SoMe </th>
      </tr>
    </thead>

    <tbody>
    <% @resturants.each do |resturant| %>
        <tr>
          <td>
          <%= link_to "Show this resturant", resturant %>


          </td>
          
          <td><%= resturant.name %></td>
          <td><%= resturant.phone %></td>
          <td><%= resturant.location %></td>
          <td><%= resturant.food_type %></td>
          <td><%= resturant.somo %></td>
          
          <td><%= link_to 'Delete', resturant, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-outline-danger btn-sm" %></td>
          
        </tr>
        <% end %>
      



      <div>
      <%= link_to "New resturant", new_resturant_path, class:"btn btn-primary"  %>
      </div>

